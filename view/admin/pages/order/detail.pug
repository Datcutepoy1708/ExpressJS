extends ../../layout/default.pug 
include ../../mixins/alert.pug 

block main 
  +alert-success(5000)
  
  .container.my-3 
    h3 Chi tiết đơn hàng
    
    .row 
      .col-12 
        table.table.table-bordered
          thead 
            tr 
              th STT 
              th Ảnh 
              th Tên sản phẩm
              th Giá
              th Số lượng 
              th Thành tiền 
          tbody
            if(order.products && order.products.length > 0)
              each product, index in order.products  
                tr 
                  td #{index + 1}
                  td 
                    img(src=product.productThumbnail alt=product.productName width="60px")
                  td #{product.productName || 'Không rõ tên'}
                  td #{product.priceNew} $
                  td #{product.quantity}
                  td #{product.finalPrice} $
            else 
              tr
                td(colspan="6") Không có sản phẩm nào trong đơn hàng
        
        .mt-3
          h5 Tổng tiền: #{order.total} $
          
        .mt-3
          a(href=`${prefixAdmin}/order` class="btn btn-secondary") Quay lại
