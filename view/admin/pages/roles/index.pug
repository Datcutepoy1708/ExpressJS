extends ../../layout/default.pug 
include ../../mixins/alert.pug
include ../../mixins/moment.pug
block main
 if(role.permissions.includes("role-view"))
  +alert-success(5000) 
  h1(class="mb-4") Nhóm quyền

  .card.mb-3 
    .card-header Danh sách 
    .card-body 
      .row 
        .col-8 
        .col-4.text-right 
          a(
            href=`${prefixAdmin}/roles/create`
            class="btn btn-outline-success"
          ) + Thêm mới 

      table(
        class="table table-hover table-sm"
      )
        thead 
          tr 
            th STT 
            th Nhóm quyền
            th Mô tả ngắn
            td Chỉnh sửa
            th Hành động 
        tbody 
          if(records.length > 0)
            each item,index in records 
              tr 
                td #{index+1} 
                td #{item.title} 
                td #{item.description}
                td
                  if(item.lastEditBy)
                    div 
                      div.fw-bold.text-primary #{item.lastEditBy}
                      small.text-muted.d-block
                        i.fas.fa-edit.me-1
                        +formatDateTime(item.lastEditAt)
                      if(item.editedBy && item.editedBy > 1)
                        small.badge.bg-info.text-white.mt-1
                          i.fas.fa-history.me-1
                          | #{item.editedBy} lần chỉnh sửa
                  else
                    div.text-muted.small
                      i.fas.fa-minus-circle.me-1
                      | Chưa chỉnh sửa 
                td 
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`${prefixAdmin}/roles/detail/${item.id}`
                  ) Chi tiết 
                  if(role.permissions.includes("role-edit"))
                    a(
                      class="btn btn-warning btn-sm ml-1"
                      href=`${prefixAdmin}/roles/edit/${item.id}`
                    ) Sửa
                  if(role.permissions.includes("role-delete"))
                    button.btn.btn-danger.btn-sm.ml-1(
                      type="button"
                      data-id=item.id
                      button-delete
                    ) Xóa
          else 
            tr 
              td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo

  form#form-delete-item(
    action=""
    method="POST"
    data-path=`${prefixAdmin}/roles/delete`
  )

  script(src="/admin/js/role.js")