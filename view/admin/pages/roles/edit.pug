extends ../../layout/default.pug 
include ../../mixins/alert.pug 

block main
 if(role.permissions.includes("role-edit")) 
  h1(class="mb-4") Chỉnh sửa nhóm quyền 

  +alert-success(5000)
  +alert-error(3000)

  form(
    action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=data.title
        enctype="multipart/form-data"
      )
    div(class="form-group")
      label(for="desc") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        value=data.description
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật