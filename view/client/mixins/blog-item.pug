mixin blog-item(item)
  .col-4.mb-3 
    .blog-item 
      .inner-image 
        a(href=`/blogs/detail/${item.slug}`)
          img(src=item.thumbnail alt=item.title style="width: 100%; height: 200px; object-fit: cover;")
        if(item.featured=="1")
          .inner-featured Nổi bật
      .inner-content 
        h3.inner-title 
          a(href=`/blogs/detail/${item.slug}`) #{item.title}
        
        // Hiển thị mô tả ngắn
        .inner-desc
          p !{item.description || (item.content ? item.content.substring(0, 120) + '...' : '')}
        
        // Thông tin meta
        .inner-meta
          .meta-date
            i.fa.fa-calendar
            span #{new Date(item.createdAt).toLocaleDateString('vi-VN')}
          
        
        // Nút đọc thêm
        .inner-action
          a.btn.btn-primary(href=`/blogs/detail/${item.slug}`) Đọc thêm